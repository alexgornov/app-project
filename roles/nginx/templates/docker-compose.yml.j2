---
version: '3'
services:
  nginx:
    image: nginx:{{ nginx_tag }}
    restart: unless-stopped
    volumes:
      - ./conf/nginx.conf:/etc/nginx/nginx.conf
      - ./conf/default.conf:/etc/nginx/conf.d/default.conf
      - ./conf/ssl:/root/ssl
    ports:
      - 80:80
      - 443:443
    networks:
      - web-app_app-network

networks:
  web-app_app-network:
    external: true
